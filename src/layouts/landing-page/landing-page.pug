block variables
include ../../components/header/header
include ../../components/footer/footer
include ../../assets/img/favicon/favicon

- const { header , footer } = require('@/layouts/landing-page/landing-page.json')

doctype html
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(name="keywords" content=keywords)
    meta(name="description" content=description)
    title= title || 'TOXIN'
    block favicon
      +favicon
  body.landing-page
    .landing-page__content
      +header(header)
      block content
    +footer(footer)
