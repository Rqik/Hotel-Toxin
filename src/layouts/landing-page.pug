block variables
include ../components/header/header
include ../components/footer/footer
include ../components/favicon/favicon
doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    +favicon
    title= title
  body.container
    +header(
      {
        logo: {src: "img/logo.png"}, items: [{
          text: 'О нас', active:
            true
        },
          {
            text: 'Услуги',
            more: [{text: 'Дополнительные пункты'}, {text: 'Дополнительные пункты большие'}, {text: 'Дополнительные пункты'}]
          }
          , {text: 'Вакансии'}, {text: 'Новости'},
          {
            text: 'Соглашения',
            more: [{text: 'Дополнительные пункты'}, {text: 'Дополнительные пункты большие'}, {text: 'Дополнительные пункты'}]
          }]
      }
    )
    block content
    +footer