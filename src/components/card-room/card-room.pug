include ../../components/date-picker/date-picker
include ../../components/drop-down/drop-down
include ../../components/button/button

mixin cardRoom({room, price}={})
  .card-room
    .card-room__header
      .card-room__detail
        .card-room__detail-number №
          span.card-room__detail-number_bold=room
        .card-room__detail-category люкс
      .card-room__price
        span.card-room__price_bold.js-card-room__price_bold=price+'₽'
        | в сутки
    .card-room__data
      +datepicker({title1: 'прибытие', title2: 'выезд'})
      +dropdownSelect({
        extended: true, active: false, name: 'гости',
        current: 'Сколько гостей', text: [
          'взрослые',
          'дети', 'младенцы']
      })
    .card-room__info
      .card-room__info-item
        .card-room__info-name.js-card-room__info-name.js-card-room__pay1 9990₽
        .card-room__info-sum.js-card-room__info-sum.js-card-room__pay2 39000₽
      .card-room__info-item
        .card-room__info-name.js-card-room__info-name.js-card-room__sale1 Сбор за услуги: скидка 2 179₽
        .card-room__info-sum.js-card-room__info-sum.js-card-room__sale2 0₽
      .card-room__info-item
        .card-room__info-name.js-card-room__info-name.js-card-room__dop1 Сбор за дополнительные услуги
        .card-room__info-sum.js-card-room__info-sum.js-card-room__dop2 3000₽
      .card-room__info_result
        .card-room__info-name_result Итого
        .card-room__info-sum_result.js-card-room__info-sum_result 3890000₽
    +button({style: 'long', text: 'забронировать'})