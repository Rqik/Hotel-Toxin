//- style  -- filled or outlined
//- size   -- small or long
//- text   -- button caption text
//- href   -- url address link format https://www.google.com/
//- grow   -- boolean  if true width: 100%
mixin button({ style = "none", size, text, href, type = "button", grow = false})
  -
    let classList = []
    classList.push(`button_theme-${style}`)
    if(size) classList.push(`button_size-${size}`)
    if(grow) classList.push('button_grow')
  if (href)
    a.button(class = classList href = href)
      span.button__text= text
      if size === "long"
        span.button__icon arrow_forward
  else
    button.button(class = classList type = type)
      span.button__text= text
      if size === "long"
        span.button__icon arrow_forward
