//- caption -- text description for inputRadio
//- name -- input name
//- labels --- Array<string>
mixin inputRadio({ caption, name, label , checkedItemIndexDefault = 0 })
  .input-radio
    if caption
      .input-radio__caption= caption
    .input-radio__items
      each item , index in label
        .input-radio__item
          input.input-radio__item-input(id=`${name}-${index}`
            checked=checkedItemIndexDefault === index type="radio" name=name)
          label.input-radio__item-label(for=`${name}-${index}`)= item
