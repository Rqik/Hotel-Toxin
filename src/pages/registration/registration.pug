extends ../../layouts/landing-page
include ../../components/field/field
include ../../components/button/button
include ../../components/input-radio/input-radio
include ../../components/switch-toggle/switch-toggle
block variables
  - var title = 'Registration'

block content
  .register
    .card__block
      .card__title Регистрация аккаунта
      +field({name: 'name', placeholder: 'Имя'})
      +field({name: 'name', placeholder: ' Фамилия'})
      +inputRadio({name: 'gender', label: ['Мужчина', 'Женщина']})
      +field({name: 'date', title: 'Дата рождения', placeholder: 'ДД.ММ.ГГГГ'})
      .card__auth
        +field({
          name: 'email', title: 'Данный для входа в сервис', placeholder:
            'Email'
        })
        +field({name: 'name', placeholder: 'Пароль'})
        +switchToggle({
          caption: '',
          name: 'toogle',
          label: ['Получать спецпредложения']
        })
      +button(3,'перейти к оплате')
      .card__bot
        .card__bot_text Уже есть аккаунт на Toxin
        +button({style: 'outline', text: 'Войти'})