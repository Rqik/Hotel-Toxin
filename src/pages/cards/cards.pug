extends ../../layouts/grey/grey
include ../../components/card-slider/card-slider
include ../../components/card-auth/card-auth
include ../../components/card-registration/card-registration
include ../../components/card-room/card-room
include ../../components/card-find/card-find
include ../../components/calendar/calendar


block variables
  -
    const title = 'Cards'
    const keywords = 'карточки регистрации, авторизации, календаря, слайдера'
    const description = 'Страница с картами для взаимодействия'

block content
  - const { cardSlider, cardSlider2, cardRoom } = require('./card.json')
  .cards
    .cards__element
      +cardFind
      +cardRegistration
    .cards__element
      +cardRoom(cardRoom)
      +cardAuth
    .cards__element
      +calendar
      +cardSlide(cardSlider)
      +cardSlide(cardSlider2)
