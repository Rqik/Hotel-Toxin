include ../button/button
include ../input/input

mixin header(logo, items)
    .header
        .nav_bar
            .header__logo
                img(src=logo.src, alt=logo.alt ? logo.alt : 'logo')
            .nav__menu
                ul.nav__menu_items
                    if items
                        each item in items
                            li.nav__menu_item(
                                class=item.active ? 'nav__menu_item-active' : ''
                                class=item.more ? 'nav__menu_item-more' : '')
                                a(href=item.href ? item.href : '#')= item.text
                                if item.more
                                    ul
                                        each elem in item.more
                                            li
                                                a(href=elem.href ? elem.href : '#')=elem.text
                    else
                        li.nav__menu_item.nav__menu_item-active
                            a(href='#') нет элементов
                    li.nav__menu_item
                        +button(2 , 'войти')
                    li.nav__menu_item
                        +button(1 , 'зарегистрироваться')
                .menu_burger
                    i.material-icons menu



