mixin footer
  footer
    .footer__container
      .footer-top
        .footer-top__info
          .footer-top__info_logo
            img(src="img/logo.png", alt="alt")
          .footer-top__info_text Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»
        .footer-top__nav
          .footer__nav
            .footer__nav-title Навигация
            ul.footer__nav-items
              li.footer__nav-item
                a(href='#') О нас
              li.footer__nav-item
                a(href='#') Новости
              li.footer__nav-item
                a(href='#') Служба поддержки
              li.footer__nav-item
                a(href='#') Услуги
          .footer__nav
            .footer__nav-title О нас
            ul.footer__nav-items
              li.footer__nav-item
                a(href='#') О сервисе
              li.footer__nav-item
                a(href='#') Наша команда
              li.footer__nav-item
                a(href='#') Вакансии
              li.footer__nav-item
                a(href='#') Инвесторы
          .footer__nav
            .footer__nav-title Служба поддержки
            ul.footer__nav-items
              li.footer__nav-item
                a(href='#') Соглашения
              li.footer__nav-item
                a(href='#') Сообщества
              li.footer__nav-item
                a(href='#') Связь с нами

        .footer-top__subscribe
          .footer__subscribe-title Подписка
          .footer__subscribe-text Получайте специальные предложения и новости сервиса
          +field({ name: 'email',placeholder :'Email', form:true})

      .footer-bot
        .footer-copyright Copyright © 2018 Toxin отель. Все права зачищены.
        .footer-social
          a(href="#")
            img(src="img/twitter.svg", alt="")
          a(href="#")
            img(src="img/facebook.svg", alt="")
          a(href="#")
            img(src="img/instagramm.svg", alt="")

